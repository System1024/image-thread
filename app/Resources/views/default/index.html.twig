{% extends 'base.html.twig' %}

{% block body %}
    <div class="topbar">
        <div class="counter">Posts: <span id="msgCount">{{ messagesCount }}</span></div>
        <a href="javascript:showExport()" class="button" >Export button</a>
        <div class="counter">Views: <span id="viewsCount">{{ viewCount }}</span></div>
        <div id="exportDiv" style="display: none">
            <a href="{{ path('export', {'format': 'csv'}) }}" class="button">CSV</a>
            <a href="{{ path('export', {'format': 'excel'}) }}" class="button">Excel</a>
            <a href="{{ path('export', {'format': 'zip'}) }}" class="button">Zip</a>
        </div>

    </div>
    <div class="replybox">

        <input value="Image title" type="text" id="imageTitle">
        <input type="file" style="visibility: hidden; display: none" id="fileInput" onchange="uploadImage()" accept="image/*">
        <br>
        <a href="javascript:chooseImage()" class="button">Upload image</a>
    </div>

    <div id="list" class="list">
        {{ include(':default:messages.html.twig') }}
    </div>
{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="{{ asset('assets/css/main.css') }}">
{% endblock %}
{% block scripts %}
    <script src="{{ asset('assets/js/jquery-2.2.1.min.js') }}"></script>
    <script src="{{ asset('assets/js/upload.js') }}"></script>
{% endblock %}
